alias ls='ls -vG'
alias -g L="| $PAGER"
alias -g M="| $PAGER"
alias -g G='| grep'
alias -g C='| cat -n'
alias -g W='| wc'
alias -g H='| head'
alias -g T='| tail'
alias -g p='| peco'
alias -g ....='../..'
alias ll='ls -Gl'
alias la='ls -aGl'

alias pd='popd'
alias gd='dirs -v; echo -n "select number: "; read newdir; cd +"$newdir"'

alias grep='grep --color=auto'

# remove safely
if [[ -x "$(which gmv)" ]];
  then alias rm='gmv -f --backup=numbered --target-directory ~/.Trash/'
fi
