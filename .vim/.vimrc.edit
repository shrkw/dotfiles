
" search
set hlsearch
set incsearch
set ignorecase
set smartcase

" indent
set autoindent
set smartindent

" remove indent, eol by backspace
set backspace=indent,eol,start
set showmatch
set matchtime=1

" completion
set wildmenu

" tab input
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set smarttab

" remve trailing white spaces when save
autocmd default BufWritePre * :%s/\s\+$//e

